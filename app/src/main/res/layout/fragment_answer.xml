<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_answer_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="54dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="What are Binary Trees?"
        android:textStyle="bold"
        android:paddingEnd="24dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/avenir_roman"/>

    <TextView
        android:id="@+id/tv_answer_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:lineSpacingExtra="8sp"
        android:textSize="18sp"
        android:paddingEnd="24dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/avenir_light"
        app:layout_constraintStart_toStartOf="@+id/tv_answer_question"
        app:layout_constraintTop_toBottomOf="@+id/tv_answer_question"
